= form_for @article, html: { class: "form form-horizontal article" } do |f|
  .form-group
    = f.label :name, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :name, class: 'form-control', required: true
    = f.error_span(:name)
  .form-group
    = f.label :body, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :body, class: 'form-control', required: true
    = f.error_span(:body)
  .form-group
    %label.control-label.col-lg-2
      Category
    .col-lg-10
      = f.select(:category_id, options_for_select(Category.pluck(:name,:id)), {}, class:'ui dropdown')
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), articles_path, :class => 'btn btn-default'
